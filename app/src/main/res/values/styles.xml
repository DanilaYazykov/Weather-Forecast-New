<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GuideStyle">
        <item name="android:layout_width">@dimen/null_size</item>
        <item name="android:layout_height">@dimen/null_size</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/m_text_size</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DaysPictureStyle">
        <item name="android:layout_width">@dimen/normal_m_size</item>
        <item name="android:layout_height">@dimen/normal_m_size</item>
        <item name="android:layout_marginTop">@dimen/small_size</item>
        <item name="android:layout_marginEnd">@dimen/small_size</item>
        <item name="android:layout_marginBottom">@dimen/small_size</item>
    </style>

    <style name="FragmentPictureStyle">
        <item name="android:layout_width">@dimen/plus_size</item>
        <item name="android:layout_height">@dimen/plus_size</item>
        <item name="android:layout_marginTop">@dimen/normal_s_size</item>
    </style>

    <style name="HoursPictureStyle">
        <item name="android:layout_width">@dimen/normal_s_size</item>
        <item name="android:layout_height">@dimen/normal_s_size</item>
        <item name="android:layout_marginTop">@dimen/small_size</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemIconTint">@drawable/bottom_navigation_icon_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_icon_selector</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>